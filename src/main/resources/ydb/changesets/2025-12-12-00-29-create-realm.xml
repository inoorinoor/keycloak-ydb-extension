<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

  <changeSet id="2025-12-12-00-29-create-realm-table" author="keycloak-ydb-extension">
    <createTable tableName="realms">
      <column name="id" type="TEXT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="TEXT">
        <constraints nullable="false"/>
      </column>

      <!-- OTP Policy fields -->
      <!-- TODO: Make sure this is worked as defaultValueNumeric="6"> -->
      <!-- <column name="otp_policy_digits" type="INT" defaultValueNumeric="6"> -->
      <column name="otp_policy_digits" type="INT">
        <constraints nullable="false"/>
      </column>
      <!-- TODO: Make sure this is worked as defaultValue="HmacSHA1"> -->
      <!-- <column name="otp_policy_algorithm" type="TEXT" defaultValue="HmacSHA1"> -->
      <column name="otp_policy_algorithm" type="TEXT">
        <constraints nullable="false"/>
      </column>

      <!-- TODO: Make sure this is worked as defaultValueNumeric="0"> -->
      <!-- <column name="otp_policy_initial_counter" type="INT" defaultValueNumeric="0"> -->
      <column name="otp_policy_initial_counter" type="INT">
        <constraints nullable="false"/>
      </column>

      <!-- TODO: Make sure this is worked as defaultValueNumeric="1"> -->
      <!-- <column name="otp_policy_look_ahead_window" type="INT" defaultValueNumeric="1"> -->
      <column name="otp_policy_look_ahead_window" type="INT">
        <constraints nullable="false"/>
      </column>

      <!-- TODO: Make sure this is worked as defaultValue="totp"> -->
      <!-- <column name="otp_policy_type" type="TEXT" defaultValue="totp"> -->
      <column name="otp_policy_type" type="TEXT">
        <constraints nullable="false"/>
      </column>

      <!-- TODO: Make sure this is worked as defaultValueNumeric="30"> -->
      <!-- <column name="otp_policy_period" type="INT" defaultValueNumeric="30"> -->
      <column name="otp_policy_period" type="INT">
        <constraints nullable="false"/>
      </column>
      <!-- TODO: Make sure this is worked as defaultValueNumeric="false"> -->
      <!-- <column name="otp_policy_is_code_reusable" type="BOOLEAN" defaultValueNumeric="false"> -->
      <column name="otp_policy_is_code_reusable" type="BOOLEAN">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="2025-12-12-00-39-create-realm-attributes-table" author="keycloak-ydb-extension">
    <createTable tableName="realm_attributes">
      <column name="id" type="TEXT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="value" type="TEXT"/>
      <column name="realm_id" type="TEXT">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="2025-12-14-02-18-create-realm-required-credential-table" author="keycloak-ydb-extension">
    <createTable tableName="realm_required_credentials">
      <column name="id" type="TEXT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="TYPE" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="FORM_LABEL" type="VARCHAR(255)"/>
      <!--  TODO: Make sure this is worked as defaultValueBoolean="false" -->
      <!--  TODO:      <column name="INPUT" type="BOOLEAN" defaultValueBoolean="false"> -->
      <column name="INPUT" type="BOOLEAN">
        <constraints nullable="false"/>
      </column>

      <!--  TODO: Make sure this is worked as defaultValueBoolean="false" -->
      <!--      <column name="SECRET" type="BOOLEAN" defaultValueBoolean="false"> -->
      <column name="SECRET" type="BOOLEAN">
        <constraints nullable="false"/>
      </column>
      <column name="REALM_ID" type="VARCHAR(36)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

</databaseChangeLog>
